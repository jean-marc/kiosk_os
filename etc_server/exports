# /etc/exports: the access control list for filesystems which may be exported
#		to NFS clients.  See exports(5).
#
# Example for NFSv2 and NFSv3:
# /srv/homes       hostname1(rw,sync,no_subtree_check) hostname2(ro,sync,no_subtree_check)
#
# Example for NFSv4:
# /srv/nfs4        gss/krb5i(rw,sync,fsid=0,crossmnt,no_subtree_check)
# /srv/nfs4/homes  gss/krb5i(rw,sync,no_subtree_check)
#
#/var/ftpd/images/client/ *(rw,nohide,no_root_squash,async,fsid=0,no_subtree_check)

/client/ *(rw,nohide,no_root_squash,async,fsid=0,no_subtree_check)
/client/bin *(rw,nohide,no_root_squash,no_subtree_check)
/client/boot *(rw,nohide,no_root_squash,no_subtree_check)
/client/etc *(rw,nohide,crossmnt,no_root_squash,no_subtree_check)
/client/home *(rw,nohide,no_root_squash,no_subtree_check)
/client/lib *(rw,nohide,no_root_squash,no_subtree_check)
/client/lib64 *(rw,nohide,no_root_squash,no_subtree_check)
/client/opt *(rw,nohide,no_root_squash,no_subtree_check)
/client/root *(rw,nohide,no_root_squash,no_subtree_check)
#/client/run *(rw,nohide,no_root_squash,no_subtree_check)
/client/sbin *(rw,nohide,no_root_squash,no_subtree_check)
/client/selinux *(rw,nohide,no_root_squash,no_subtree_check)
/client/usr *(rw,nohide,no_root_squash,no_subtree_check)
/client/var *(rw,nohide,no_root_squash,no_subtree_check)
